<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityAddCourse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewAddCourse"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Add Student"
        android:textColor="@color/xanhnhat"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/editTextStudentName"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Student Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/editTextGender"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity=""
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Gender"
        android:inputType="textPersonName"
        android:textSize="20dp"></TextView>
    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioBtnMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioBtnFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female" />
    </RadioGroup>

    <EditText
        android:id="@+id/editTextStudentCode"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Student Code"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextBrithday"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Brithday"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnStudentAdd"
        android:layout_width="248dp"
        android:layout_height="72dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Add Student" />


</LinearLayout>