<!--        android:layout_height="30dp"-->
<!--        android:gravity="center"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:text="Birthday"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:textSize="19dp">-->
