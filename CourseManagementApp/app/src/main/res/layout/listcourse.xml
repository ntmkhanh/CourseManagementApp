<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtCourse"
            android:layout_width="190dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:text="Course"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCredit"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Credits: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtnumberCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="15dp" />

        </LinearLayout>

        <!--        <TextView-->
        <!--            android:id="@+id/timeoutput"-->
        <!--            android:layout_width="392dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textColor="#858484"-->
        <!--            android:textSize="12dp"-->
        <!--            android:gravity="end"-->
        <!--            android:text="Jan 1 2023 "-->
        <!--            android:layout_gravity="center"/>-->

    </LinearLayout>

    <ImageButton
        android:id="@+id/info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_sharp_info_24"></ImageButton>
    <ImageButton
        android:id="@+id/update"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_baseline_update_24"></ImageButton>
    <ImageButton
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_baseline_delete_24"></ImageButton>

</LinearLayout>



